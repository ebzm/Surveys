<% question_group_id = params[:group] %>

<div class="container">
  <%=  form_with model: @question do |form| %>
    <p><%= form.text_area :questiontype, class: 'form-text-area' %></p>
    <p><%= form.select :question_group_id, [['',question_group_id]] %></p>
    <p class="mt"><%= form.submit 'Create', class: 'button button-main' %></p>
  <% end %>

  <p class="mt"><%= link_to "back", question_group_path(QuestionGroup.find(params[:group])) %></p>
</div>