<div class="container">
  <% questiongroup_id = params[:group] %>
  <%=  form_with model: @question do |form| %>
    <p><%= form.text_area :questiontype, class: 'form-text-area' %></p>
    <p><%= form.select :questiongroup_id, [['',questiongroup_id]] %></p>
    <p class="mt"><%= form.submit 'Создать', class: 'button button-main' %></p>
  <% end %>

  <p class="mt"><%= link_to "назад", questiongroup_path(Questiongroup.find(params[:group])) %></p>
</div>