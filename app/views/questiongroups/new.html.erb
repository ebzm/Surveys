<div class="container">
  <% survey_id = params[:group] %>
  <%=  form_with model: @questiongroup do |form| %>
    <p><%= form.text_area :label, class: 'form-text-area' %></p>
    <p><%= form.select :survey_id, [['',survey_id]] %></p>
    <p class="mt"><%= form.submit 'Создать', class: 'button button-main' %></p>
  <% end %>

  <p class="mt"><%= link_to "назад", survey_path(Survey.find(params[:group])) %></p>
</div>